<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/middle</item>
        <item name="android:paddingStart">@dimen/middle</item>
        <item name="android:paddingEnd">@dimen/middle</item>
    </style>

    <style name="DetailsTitle" parent="DetailsText">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
